{
  "description": "(Microsoft) Teams for Web Improved",
  "manifest_version": 2,
  "name": "teams-wim",
  "version": "0.1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "storage",
    "https://*.teams.microsoft.com/*"
  ],
  "background": {
    "scripts": ["notifications.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "64": "icon.svg"
    }
  },
  "applications": {
    "gecko": {
      "id": "{9f5312bc-1457-48fe-94b1-2a6aaa3fc2a3}",
      "strict_min_version": "60.0"
    }
  }
}
